{
  "_comment": "Production configuration with authentication and HTTPS",
  "_comment_security": "Requirements: 22.1, 22.2, 22.4, 22.5",
  "_instructions": [
    "1. Copy this file to your Claude Desktop config location:",
    "   - Windows: %APPDATA%\\Claude\\claude_desktop_config.json",
    "   - macOS: ~/Library/Application Support/Claude/claude_desktop_config.json",
    "2. Update 'args' with the full path to mcp_bridge.py on your machine",
    "3. Get your API key from AWS Secrets Manager: mcp-tagging/prod/api-keys -> primary_key",
    "4. Replace 'YOUR_API_KEY_HERE' with the actual API key",
    "5. Restart Claude Desktop"
  ],
  "mcpServers": {
    "finops-tagging": {
      "command": "python",
      "args": ["C:\\path\\to\\finops-tag-compliance-mcp\\scripts\\mcp_bridge.py"],
      "env": {
        "MCP_SERVER_URL": "https://mcp.optimnow.io",
        "MCP_API_KEY": "YOUR_API_KEY_HERE"
      }
    }
  },
  "anthropic-beta": "mcp-client-2025-11-20",
  "toolsets": {
    "finops-tagging": {
      "type": "mcp_toolset",
      "mcp_server_name": "finops-tagging",
      "default_config": {
        "enabled": true,
        "defer_loading": false
      },
      "configs": {
        "generate_compliance_report": {
          "enabled": true,
          "defer_loading": true,
          "description": "Defer loading - used after initial analysis"
        },
        "get_violation_history": {
          "enabled": true,
          "defer_loading": true,
          "description": "Defer loading - historical queries only"
        },
        "get_cost_attribution_gap": {
          "enabled": true,
          "defer_loading": true,
          "description": "Defer loading - specific financial analysis"
        },
        "suggest_tags": {
          "enabled": true,
          "defer_loading": true,
          "description": "Defer loading - ML suggestions (specialized use case)"
        },
        "validate_resource_tags": {
          "enabled": true,
          "defer_loading": true,
          "description": "Defer loading - specific resource validation"
        },
        "check_tag_compliance": {
          "enabled": true,
          "defer_loading": false,
          "description": "Keep loaded - primary use case"
        },
        "find_untagged_resources": {
          "enabled": true,
          "defer_loading": false,
          "description": "Keep loaded - core functionality"
        },
        "get_tagging_policy": {
          "enabled": true,
          "defer_loading": false,
          "description": "Keep loaded - referenced frequently"
        }
      }
    }
  }
}
